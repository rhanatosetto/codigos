/**********************************************************
- Criar um programa em linguagem c que resolva formula de bháskara
**********************************************************/
#include <stdio.h>
#include <math.h>
#include <locale.h>
#include <stdlib.h>

int main(void) 
{
float a,b,c,d,x1,x2;

  printf("BEM VINDO A CALCULADORA DE BHÁSKARA!\n");
  printf("digite o valor de a,b e c\n");
   printf("pressione enter apos digitar o numero\n");
  scanf("%f%f%f" ,&a,&b,&c);
  d=(b*b)-(4*a*c);
  x1=(-b+sqrt(d))/(2*a);
  x2=(-b-sqrt(d))/(2*a);
  printf("o valor do seu delta é=%.2f\n" ,d);
  printf("x1=%.2f e x2=%.2f\n" ,x1,x2);
  getchar();

  
  return 0;
}
